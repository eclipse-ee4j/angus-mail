<assembly>
    <id>samples</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>jakartamail-samples</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>../demos/demo/src/main/java</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>internal/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../demos/client/src/main/java</directory>
            <outputDirectory>client</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demos/webapp/src/main/java</directory>
            <outputDirectory>webapp/src/classes</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demos/webapp/src/main/webapp</directory>
            <outputDirectory>webapp/src/docroot</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demos/webapp/</directory>
            <outputDirectory>webapp</outputDirectory>
            <includes>
                <include>build.*</include>
                <include>webapp.README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../demos/taglib/src/main/java</directory>
            <outputDirectory>webapp/src/taglib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demos/taglib/src/main/resources</directory>
            <outputDirectory>webapp/src/taglib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demos/outlook/src/main/java</directory>
            <outputDirectory>outlook</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demos/logging/src/main/java</directory>
            <outputDirectory>logging</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- include sources from the demo modules -->
        <!--
        <dependencySet>
            <includes>
                <include>com.sun.mail:demo:jar:sources</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
        -->
    </dependencySets>
</assembly>
